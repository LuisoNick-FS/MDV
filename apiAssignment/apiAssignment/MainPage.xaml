<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apiAssignment.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="FishWatch.gov API" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout>
            <Image x:Name="fishImage" Source="" HeightRequest="125" />
            <Label x:Name="nameLabel" Text="Name: " />
            <Label x:Name="locLabel" Text="Habitat: " />
            <Label x:Name="statLabel" Text="Sustainability:" />
        </StackLayout>

        <StackLayout>
            <Button x:Name="tuneButton" Text="Red Snapper" />
            <Button x:Name="monkButton" Text="Monkfish" />
            <Button x:Name="sharkButton" Text="Shark" />
        </StackLayout>


    </StackLayout>

</ContentPage>

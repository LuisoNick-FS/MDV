<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Luiso_Nick_Alpha.SignInPage">
    <ContentPage.Content>


           <StackLayout BackgroundColor="#2589BD">
                <Frame BackgroundColor="#2589BD" Padding="24" CornerRadius="0">
            <Label Text="Sign In" HorizontalTextAlignment="Center" TextColor="#FFEAD0" FontSize="36"/>
        </Frame>

            <Image Source="profile.png" Margin="30" Scale="1.5"/>
            
            <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" HorizontalOptions="Fill" HorizontalTextAlignment="Center"/>
            <Entry x:Name="passEntry" Placeholder="Password" HorizontalTextAlignment="Center"/>
            <Button x:Name="signInButton" Text="Sign In" HorizontalOptions="Center" BackgroundColor="#0B2545" TextColor="#FFEAD0"/>

        </StackLayout>


    </ContentPage.Content>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Luiso_Nick_Alpha.MainPage"  BackgroundImageSource="fish_bg.png">

    <StackLayout>
        <Frame BackgroundColor="#2589BD" Padding="24" CornerRadius="0">
            <Label Text="FishFinder" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
     
           <Image Source="logo.png" HorizontalOptions="Center" VerticalOptions="Center" Scale="0.75" />

        <StackLayout Orientation="Horizontal">

            <Button x:Name="signInButton" Text="Sign In" HorizontalOptions="StartAndExpand" BackgroundColor="#0B2545" TextColor="#FFEAD0" Margin="40,0,0,0" />
            <Button x:Name="signUpButton" Text="Sign Up" HorizontalOptions="EndAndExpand" BackgroundColor="#0B2545" TextColor="#FFEAD0" Margin="0,0,40,0" />

        </StackLayout>



    </StackLayout>

</ContentPage>

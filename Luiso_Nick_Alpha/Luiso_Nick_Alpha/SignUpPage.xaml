<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Luiso_Nick_Alpha.SignUpPage">
    <ContentPage.Content>


         <StackLayout BackgroundColor="#2589BD">
              <Frame BackgroundColor="#2589BD" Padding="24" CornerRadius="0">
            <Label Text="Sign Up" HorizontalTextAlignment="Center" TextColor="#FFEAD0" FontSize="36"/>
        </Frame>


            <Entry x:Name="nameEntry" Placeholder="Full Name"/>
            <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email"/>
            <Entry x:Name="passEntry" Placeholder="Password"/>
            <Entry x:Name="confirmEntry" Placeholder="Confirm Passowrd"/>

            <Button x:Name="signUpButton" Text="Sign Up" BackgroundColor="#0B2545" TextColor="#FFEAD0"/>
            <Button x:Name="signInButton" Text="Already have an acount? Sign In" BackgroundColor="#2589BD" TextColor="#0B2545" />
        </StackLayout>



    </ContentPage.Content>
</ContentPage>
